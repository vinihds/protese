<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="protesePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>protese.model.cliente.Cliente</class>
    <class>protese.model.cliente.Contato</class>
    <class>protese.model.cliente.ClienteCreditoSaida</class>
    <class>protese.model.cliente.Endereco</class>
    <class>protese.model.cliente.ClienteCreditoEntrada</class>
    <class>protese.model.cliente.ClienteContato</class>
    <class>protese.model.cliente.ClienteEndereco</class>
    <class>protese.model.servico.ServicoDetalhe</class>
    <class>protese.model.servico.Servico</class>
    <class>protese.model.servico.ServicoPagamento</class>
    <class>protese.model.produto.ProdutoValor</class>
    <class>protese.model.produto.Produto</class>
    <class>protese.model.produto.Grupo</class>
    <class>protese.model.pagamento.FormaPagamento</class>
    <class>protese.model.pagamento.Pagamento</class>
    <class>protese.model.servico.ServicoCredito</class>
    <class>protese.model.cliente.ClienteDebito</class>
    <class>protese.model.servico.ServicoDebito</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/protese"/>
      <property name="hibernate.default_schema" value="protese"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="toor"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="connection.pool_size" value="10"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
      <property name="hibernate.hbm2ddl.auto" value="none"/>
    </properties>
  </persistence-unit>
</persistence>
